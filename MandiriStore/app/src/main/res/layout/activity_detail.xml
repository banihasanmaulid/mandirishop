<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_marginTop="@dimen/margin_top_24"
        android:layout_width="match_parent"
        android:layout_height="@dimen/relative_layout_height"
        android:background="@drawable/background"
        android:padding="@dimen/padding_8">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_detail"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_18"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/image_view_size"
            android:layout_height="@dimen/image_view_size"
            android:src="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:padding="@dimen/padding_16"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_image_height" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_24"
            android:textColor="#2A3956"
            android:layout_marginTop="@dimen/margin_top_16" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/productCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:textColor="#A0A8B8"
            android:layout_marginBottom="@dimen/margin_bottom_5"
            android:layout_marginTop="@dimen/margin_top_8" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2A3956"
            android:padding="@dimen/padding_8"
            android:paddingHorizontal="@dimen/padding_horizontal_12"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="@dimen/margin_bottom_10"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/productDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:textColor="#A0A8B8"
            android:layout_marginTop="@dimen/margin_top_8" />

    </LinearLayout>
</LinearLayout>